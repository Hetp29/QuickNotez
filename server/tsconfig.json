{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./",
      "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }
  